@import "~normalize.css/normalize.css"

font_color = #5d5d5d
bg_color = #f7f7f7
high_color = #f0b233
thin_color = #dbdbdb

body
  font-size: 13px
  font-family: sans-serif
  background: bg_color
  color: font_color

a
  text-decoration: none
  color: #000

  &:hover
    text-decoration: underline

header
  ul
    list-style: none
    display: flex
    flex-flow: row wrap
    justify-content: flex-end

    li
      margin: 0 10px

.main
  width: 100%
  height: 100%
  display: flex
  flex-flow: column nowrap
  align-items: center

.logo
  width: 650px
  height: auto

  @media screen and (max-width: 720px)
    width: 80%

.short-link-form
  padding: 30px 0
  width: 100%
  height: 90px
  display: flex
  flex-flow: row nowrap
  justify-content: center

  @media screen and (max-width: 800px)
    flex-flow: column nowrap

  .short-link-form__input
    flex-grow: 1
    border: 0
    font-size: 15pt
    padding: 0 20px
    background-color: #EFEFEF
    outline: none

  .short-link-form__submit
    border: 0
    background-color: high_color
    color: #fff
    padding: 10px 30px
    font-size: 12pt
    cursor: pointer

    &:hover
      background-color: #73706a
