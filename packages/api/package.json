{
  "name": "nazrin-api",
  "description": "nazr.in API",
  "version": "0.0.0",
  "main": "./build/app.js",
  "scripts": {
    "build": "shx rm -rf build && tsc",
    "dev": "npm-run-all build --parallel dev:*",
    "dev:server": "PORT=8000 nodemon ./bin/server",
    "dev:tsc": "tsc -w",
    "production:postinstall": "cross-env NODE_ENV=production yarn build",
    "production:server": "node ./bin/server",
    "test": "yarn build && nyc ava",
    "test:coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "base62": "^2.0.0",
    "body-parser": "^1.18.2",
    "corser": "^2.0.1",
    "express": "^4.16.3",
    "mongoose": "^5.5.3",
    "mongoose-sequence": "^5.0.1",
    "morgan": "^1.9.0",
    "raven": "^2.4.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "coveralls": "^3.0.3",
    "nyc": "^14.0.0",
    "supertest": "^4.0.2"
  },
  "license": "MIT"
}
